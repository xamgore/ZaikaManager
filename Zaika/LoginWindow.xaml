<Window x:Name="LoginForm" x:Class="Zaika.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Sign in" Height="207.387" Width="330.372"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="pack://application:,,,/MaterialDesignThemes.Wpf;component/Resources/Roboto/#Roboto" ResizeMode="NoResize" Topmost="True" WindowStartupLocation="CenterScreen" FontSize="14.667" WindowStyle="ToolWindow">

    <Grid Margin="0,0,0,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="0*" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <PasswordBox x:Name="PasswordBox" HorizontalAlignment="Left" Margin="105,65,0,0" Grid.RowSpan="2"
                     VerticalAlignment="Top" Width="170" Background="#00000000" KeyDown="passwordBox_KeyDown" Height="28" RenderTransformOrigin="0.341,0.917" />
        <TextBox x:Name="Login" HorizontalAlignment="Left" Height="28" Margin="105,29,0,0" Grid.Row="0"
                 Grid.RowSpan="2" TextWrapping="Wrap" VerticalAlignment="Top" Width="170" Background="#00000000"
                 KeyDown="login_KeyDown" SelectionBrush="#FF35A640" RenderTransformOrigin="-1,0" />
        <Label x:Name="LoginLab" Content="Login:" HorizontalAlignment="Left" Margin="33,29,0,0" Grid.Row="0"
               Grid.RowSpan="2" VerticalAlignment="Top" RenderTransformOrigin="0.495,0.457" />
        <Label x:Name="PasswordLab" Content="Password:" HorizontalAlignment="Left" Margin="12,65,0,0" Grid.Row="0"
               Grid.RowSpan="2" VerticalAlignment="Top" RenderTransformOrigin="0.495,0.457" />
        <Button x:Name="Button" Content="Sign in" HorizontalAlignment="Left" Margin="169,114,0,0" Grid.Row="0"
                Grid.RowSpan="2" VerticalAlignment="Top" Width="106" BorderThickness="5,1,1,1" Click="button_Click"
                Style="{DynamicResource MaterialDesignRaisedAccentButton}" />
    </Grid>
</Window>